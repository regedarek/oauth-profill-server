source 'https://rubygems.org'
ruby '2.1.2'

gem 'sinatra', require: 'sinatra/base'
gem 'dotenv' # environment variables
gem 'rake', '~> 10.3'

# DB
gem 'sinatra-activerecord'
gem 'sqlite3'

